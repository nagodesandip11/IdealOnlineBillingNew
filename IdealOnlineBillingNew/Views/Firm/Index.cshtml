
@{
    ViewBag.Title = "Index";
   // Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <ol class="breadcrumb breadcrumb-bg-teal">
            <li><a href="javascript:void(0);"><i class="material-icons">home</i> Home</a></li>
            <li><a href="javascript:void(0);"><i class="glyphicon glyphicon-globe"></i> Examination</a></li>
            <li class="active"><i class="material-icons icon">school</i> Generate Test</li>
        </ol>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Company Information

                            <button style="float:right;" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Company</button>
                        </h2>
                        <br />
                    </div>
                    <div class="body table-responsive">
                        <table id="dataTable-AllData" class="table table-hover table-bordered table-condensed table-striped js-basic-example">
                            <thead>
                                <tr>
                                    <!--<th>ID</th>-->
                                    <th>Sr No</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Contact</th>
                                    <th>Gst No</th>
                                    <th>Subject To</th>
                                    <th>Company For</th>
                                    <th>Services</th>
                                    <th>Bank Name</th>
                                    <th>AcNo</th>
                                    <th>Branch Name</th>
                                    <th>IFSC Code</th>
                                    <th>Photo</th>
                                    <th>Action</th>

                                </tr>
                            </thead>

                            <tbody id="tdata">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        @*<div class="block-header">
        <h2>Employee</h2>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Employee</button>
        <br />
        <br />*@


        <!--Modal code start from here-->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="col-md-12">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">&times;</span></button>*@
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Add Company</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-line">
                                @*<label for="EmployeeId">ID</label>
                                <input type="text" id="EmployeeID" class="form-control" placeholder="Password" disabled="disabled">*@
                                <input type="hidden" id="firmId" />
                            </div>

                            <div class="form-line">
                                <label for="Name">Company Name</label>
                                <input type="text" class="form-control" id="firmName" placeholder="Name" />
                            </div>
                            <div class="form-line">
                                <label for="Age">Address</label>
                                <input type="text" class="form-control" id="firmAddress" placeholder="Address" />
                            </div>
                            <div class="form-line">

                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="State">Contact</label>
                                        <input type="text" class="form-control" id="firmcontact" placeholder="Contact" />
                                    </div>

                                    <div class="col-md-6">
                                        <label for="Country">GST IN</label>
                                        <input type="text" class="form-control" id="gstNo" placeholder="GST In" />
                                    </div>
                                </div>
                            </div>


                            <div class="form-line">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Country">Subject To</label>
                                        <input type="text" class="form-control" id="subjectTo" placeholder="Subject To" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="Country">For</label>
                                        <input type="text" class="form-control" id="firmFor" placeholder="For" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-line">
                                <label for="Country">Services</label>
                                <input type="text" class="form-control" id="Services" placeholder="Services" />
                            </div>




                            <div class="form-line">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Country">Bank Name</label>
                                        <input type="text" class="form-control" id="bankName" placeholder="Bank Name" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="Country">Ac No</label>
                                        <input type="text" class="form-control" id="acNo" placeholder="Ac No" />

                                    </div>
                                </div>
                            </div>

                            <div class="form-line">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Country">Branch Name</label>
                                        <input type="text" class="form-control" id="branchname" placeholder="Branch Name" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="Country">IFSC Code</label>
                                        <input type="text" class="form-control" id="ifscCode" placeholder="IFSC Code" />
                                    </div>

                                </div>
                            </div>


                            <div class="form-line">
                                <div class="row">
                                    <div class="col-md-8">
                                        <label for="Image">Select Image</label>
                                        <input type="file" id="img" name="img" class="form-control" placeholder="Select Image" onChange="imgpathUrl(this);" />
                                    </div>
                                    <div class="col-md-4">
                                        <img id="dimg" width="50" height="50" />
                                    </div>
                                </div>
                            </div>
                            @*<div>
                                <select id="stList" class="form-control show-tick"></select>
                            </div>*@

                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                        <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <script src="~/Scripts/jquery-3.5.1.js"></script>
        <link href="~/Scripts/jquery.dataTables.min.css" rel="stylesheet" />
        <script src="~/Scripts/jquery.dataTables.min.js"></script>
        <!--<script src="~/Scripts/XHR2.js"></script>-->  @*for Image Upload*@
        <script src="~/ApplicationJS/firmDetails.js"></script>

    </div>

</section>
