
@{
    ViewBag.Title = "Index";
   // Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <ol class="breadcrumb breadcrumb-bg-teal">
            <li><a href="javascript:void(0);"><i class="material-icons">home</i> Home</a></li>
            <li><a href="javascript:void(0);"><i class="glyphicon glyphicon-globe"></i> Examination</a></li>
            <li class="active"><i class="material-icons icon">school</i> Generate Test</li>
        </ol>

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Product Type Information
                            <button style="float:right;" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Category</button>
                        </h2>
                    </div>
                    <div class="body table-responsive">
                        <table id="dataTable-AllData" class="table table-hover table-bordered table-condensed table-striped">
                            <thead>
                                <tr>
                                    <!--<th>ID</th>-->
                                    <th>Name</th>

                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody id="tdata">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">&times;</span></button>*@
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Product Category Info</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-line">
                                <label for="ProductId">ID</label>
                                <input type="text" id="CategoryId" class="form-control" placeholder="Category ID" disabled="disabled">
                            </div>

                            <div class="form-line">
                                <label for="Name">Product Name</label>
                                <input type="text" class="form-control" id="Name" placeholder="Name" />
                            </div>
                            <div class="form-line">
                                <label for="Name">Category Name</label>
                             
                                <select id="course" class="form-control">
                                    <option value="">---- SELECT COURSE ----</option>
                                    <option value="1">शिष्यवृत्ती परीक्षा इयत्ता ८ वी माध्यम मराठी</option>
                                    <option value="2">Scholarship Examination Class 8 ( Medium English )</option>
                                    <option value="3">शिष्यवृत्ती परीक्षा इयत्ता ५ वी माध्यम मराठी</option>
                                    <option value="4">Scholarship Examination Class 5 ( English Medium )</option>
                                </select>
                            </div>
                            
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                        <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<link href="~/Scripts/jquery.dataTables.min.css" rel="stylesheet" />

@Scripts.Render("~/bundles/js");
@Scripts.Render("~/Application/js");

