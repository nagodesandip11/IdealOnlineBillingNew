
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="block-header">

            <div class="panel panel-success">
                <div class="panel-body">
                    <h2>Product Type</h2>
                </div>

            </div>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Category</button>

            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">&times;</span></button>*@
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Product Category Info</h4>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-line">
                                    <label for="CategoryId">ID</label>
                                    <input type="text" id="CategoryId" class="form-control" placeholder="Category ID" disabled="disabled">
                                </div>

                                <div class="form-line">
                                    <label for="Name">Category Name</label>
                                    <input type="text" class="form-control" id="Name" placeholder="Name" />
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                            <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <table id="dataTable-AllData" class="table table-hover table-bordered table-condensed table-striped">
                <thead>
                    <tr>
                        <!--<th>ID</th>-->
                        <th>Name</th>

                        <th>Action</th>
                    </tr>
                </thead>

                <tbody id="tdata">
                </tbody>
            </table>

        </div>
    </div>
</section>

